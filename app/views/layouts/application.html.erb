<!DOCTYPE html>
<html>
<head>
  <title>StuVApp</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<!-- Navbar oben -->
<nav class="navbar navbar-default navbar-static">
  <div class="navbar-header">
    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".js-navbar-collapse">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="#">DHBW Wohnungsmarkt</a>
  </div>

  <!-- Verschiedene Elemente der Navigationsleiste -->
  <div class="collapse navbar-collapse js-navbar-collapse">
    <ul class="nav navbar-nav">
      <li class="dropdown dropdown-large">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Angebote <b class="caret"></b></a>

        <ul class="dropdown-menu dropdown-menu-large row">
          <li>
            <ul>
              <li> <%=link_to "Wohnungsmarkt", offer_apartments_path %></li>
              <li> <%=link_to "Schwarzes Brett", offer_blackboards_path %></li>
            </ul>
          </li>
        </ul>

      </li>
      <li class="dropdown dropdown-large">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Gesuche <b class="caret"></b></a>

        <ul class="dropdown-menu dropdown-menu-large row">
          <li>
            <ul>
              <li> <%=link_to "Wohnungsmarkt", request_apartments_path %></li>
              <li> <%=link_to "Schwarzes Brett", request_blackboards_path %></li>
            </ul>
          </li>
        </ul>

      </li>
      <li>
        <a href="#">Impressum</a>

      </li>
    </ul>
    <!-- Login Rechts in Navbar -->
    <ul class="nav navbar-nav navbar-right">

        <% if user_signed_in? %>
          <li class="dropdown dropdown-large">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%=current_user.email %> <b class="caret"></b></a>

            <ul class="dropdown-menu dropdown-menu-large row">
              <li>
                <ul>
                  <li> <%=link_to "Anzeigen Verwalten", request_apartments_path %></li>
                  <li> <%=link_to "Einstellungen", request_blackboards_path %></li>
                  <li> <%=link_to "Abmelden", destroy_user_session_path, {:method => :delete}%></li>
                </ul>
              </li>
            </ul>

          </li>
        <% else %>
          <li>
            <%= link_to 'Anmelden', new_user_session_path %>
        <% end %>
      </li>
      <li></li>
    </ul>
  </div>
</nav>


<div class="container">

  <div class="starter-template">
    <h1>StuvAPP</h1>
    <p class="lead">DHBW StuvAPP Testt</p>
  </div>

  <%= yield %>


</body>
</html>